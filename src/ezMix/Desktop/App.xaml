<Application x:Class="Desktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Desktop"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:converters="clr-namespace:Desktop.Assets.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="Assets/Styles/Themes/Colors.xaml"/>
                <ResourceDictionary Source="Assets/Styles/Themes/Fonts.xaml"/>
                <ResourceDictionary Source="Assets/Styles/Themes/Global.xaml"/>

                <ResourceDictionary Source="Assets/Styles/Controls/Button.xaml"/>
                <ResourceDictionary Source="Assets/Styles/Controls/TreeView.xaml"/>

                <ResourceDictionary Source="Assets/Styles/Converters/ConverterResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
