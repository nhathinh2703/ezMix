<Window x:Class="Updater.Views.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Updater.Views"
        mc:Ignorable="d"
        Height="200" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Background="#f8f8f8">
    <StackPanel Margin="20">
        <TextBlock Text="🔄 Đang cập nhật ezMix..." FontSize="16" Margin="0,10"/>
        <ProgressBar IsIndeterminate="True" Height="20" Margin="0,20"/>
        <TextBlock x:Name="StatusText" FontSize="14" Foreground="Gray"/>
    </StackPanel>
</Window>
